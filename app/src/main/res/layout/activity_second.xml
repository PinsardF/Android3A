<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_ikeamon"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/nom_ikeamon"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="TODO"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/type_ikeamon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_ikeamon"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:singleLine="true"
        android:text="Type"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/nature_ikeamon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/type_ikeamon"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:text="Nature"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/env_ikeamon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nature_ikeamon"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:text="Environnement"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/nom_ikeamon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:text="Example application"
        android:textColor="@android:color/background_dark"
        android:textSize="40sp" />




</RelativeLayout>